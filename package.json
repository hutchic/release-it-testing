{
  "name": "release-it-testing",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "release": "release-it --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hutchic/release-it-testing.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hutchic/release-it-testing/issues"
  },
  "homepage": "https://github.com/hutchic/release-it-testing#readme",
  "devDependencies": {
    "@release-it/bumper": "github:release-it/bumper",
    "release-it": "^14.2.2"
  },
  "release-it": {
    "verbose": 2,
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/bumper": {
        "in": "package.json",
        "out": [
          {
            "file": "package.json"
          }
        ]
      }
    },
    "hooks": {
      "after:bump": [
        "yq w -i values-dev.yaml 'image.tag' v${version}",
        "KHCP_TAG=v${version} make release"
      ]
    }
  }
}
